  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@wordpress/browserslist-config": "^4.1.2",
    "@wordpress/eslint-plugin": "^11.1.0",
    "@wordpress/prettier-config": "^1.1.3",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "browserslist": "^4.20.2",
    "css-declaration-sorter": "^6.1.4",
    "css-vars-ponyfill": "^2.4.7",
    "cssnano": "^5.1.5",
    "del": "^6.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-zip": "^5.1.0",
    "object-fit-images": "^3.2.4",
    "po2json": "^1.0.0-beta-3",
    "postcss": "^8.4.12",
    "prettier": "npm:wp-prettier@^2.2.1-beta-1",
    "sass": "^1.49.9",
    "simple-icons": "^6.15.0",
    "webpack": "^5.70.0",
    "webpack-stream": "^7.0.0"
  },
  "scripts": {
    "watch": "gulp",
    "lint:php": "composer phpcs",
    "lint-js": "eslint ./src/js/*.js",
    "lint-js:fix": "eslint --fix ./src/js/*.js",
    "build:js": "gulp js && gulp webpack",
    "build:sass": "gulp sass",
    "build:icons": "node ./src/js/icons/brand.js",
    "build": "npm run build:icons && gulp build",
    "i18n:pot": "wp i18n make-pot . languages/ystandard.pot --domain=\"ystandard\" --exclude=\"library,tests,vendor,bin\" --skip-js",
    "i18n:blocks": "po2json languages/ja.po languages/ystandard-ja-ys-block-editor-scripts.json -f jed",
    "production": "gulp production",
    "production:beta": "gulp productionBeta",
    "production:manual": "npm run build && gulp productionManual"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
