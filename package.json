{
	"name": "ystandard",
	"version": "1.0.0",
	"author": "yosiakatuki",
	"license": "GPLv2",
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@wordpress/browserslist-config": "^5.8.0",
		"@wordpress/env": "^5.10.0",
		"@wordpress/eslint-plugin": "^13.9.0",
		"@wordpress/prettier-config": "^2.8.0",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^9.1.2",
		"browserslist": "^4.21.4",
		"css-declaration-sorter": "^6.3.1",
		"cssnano": "^5.1.14",
		"del": "^7.0.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"po2json": "^1.0.0-beta-3",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"prettier": "npm:wp-prettier@latest",
		"rimraf": "^4.1.2",
		"sass": "^1.57.1",
		"simple-icons": "^8.3.0"
	},
	"scripts": {
		"activate:theme": "wp-env run cli 'wp theme activate ystandard'",
		"start:update": "wp-env start --xdebug=develop,debug -- --update && npm run activate:theme",
		"start": "wp-env start --xdebug=develop && npm run import && open http://localhost:10000/",
		"stop": "npm run export && wp-env stop",
		"watch:js": "babel src/js --out-dir js --ignore 'src/js/icons/*' -w -s",
		"watch:postcss:block-style": "postcss temp/css/block-styles/**/*.css --base temp/css/block-styles --dir css/block-styles --verbose -w",
		"watch:postcss:theme": "postcss temp/**/*.css --base temp/css --dir css --verbose -w",
		"watch:postcss": "run-p watch:postcss:*",
		"watch:css:block-style": "sass src/block-styles:temp/css/block-styles --no-source-map --no-stop-on-error -w",
		"watch:css:theme": "sass src/sass:temp/css --no-source-map --no-stop-on-error -w",
		"watch:css": "run-p watch:css:*",
		"watch": "run-p watch:*",
		"lint:php": "composer phpcs",
		"lint:js": "eslint --fix ./src/js/*.js",
		"lint": "run-s lint:*",
		"build:js": "babel src/js --out-dir js --ignore 'src/js/icons/*'",
		"build:css:block-style": "sass src/block-styles:css/block-styles --no-source-map",
		"build:css:theme": "sass src/sass:css --no-source-map ",
		"build:css:postcss:theme": "postcss css/*.css -r && postcss css/**/*.css -r",
		"build:css:postcss:block-style": "postcss css/block-styles/**/*.css -r",
		"build:css:postcss": "run-s build:css:postcss:*",
		"build:css": "run-s build:css:*",
		"build:icons": "node ./src/js/icons/brand.js",
		"build": "run-s clean build:*",
		"test:php": "wp-env start && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/themes/ystandard/phpunit.xml.dist --verbose'",
		"test": "run-s test:*",
		"clean:temp": "rimraf temp",
		"clean:upload": "rimraf upload & rimraf /ystandard",
		"clean:css": "rimraf css",
		"clean:js": "rimraf js",
		"clean:zip": "rimraf ystandard.zip",
		"clean": "run-p clean:*",
		"i18n:pot": "wp i18n make-pot . languages/ystandard.pot --domain=\"ystandard\" --exclude=\"library,tests,vendor,bin\" --skip-js",
		"i18n:blocks": "po2json languages/ja.po languages/ystandard-ja-ys-block-editor-scripts.json -f jed",
		"zip:copy": "rsync -a --exclude='.*' --exclude='/node_modules' --exclude='/vendor' --exclude='/bin' --exclude='/upload' --exclude='/composer.*' --exclude='*.config.js' --exclude='*.config.json' --exclude='*.xml.dist' --exclude='/tests' --exclude='/src' --exclude='package*.json' --exclude='ystandard-info*.json' . ystandard",
		"zip:archive": "zip -9 -qmr ystandard.zip ystandard",
		"zip": "run-s build clean:upload clean:zip zip:copy zip:archive",
		"mkdir:upload": "mkdir upload",
		"copy:json:production": "cp ystandard-info.json upload/ystandard-info.json",
		"copy:json:develop": "cp ystandard-info-beta.json upload/ystandard-info.json",
		"copy:theme": "cp ystandard.zip upload/ystandard.zip",
		"copy:production": "run-s mkdir:upload copy:json:production copy:theme",
		"copy:develop": "run-s mkdir:upload copy:json:develop copy:theme",
		"cli": "wp-env run cli",
		"wp": "wp-env run cli wp",
		"export:uploads": "npm run cli 'cp -r wp-content/uploads .wp-content'",
		"export:db": "npm run wp 'db export .wp-content/db.sql'",
		"export:clean:remove": "npm run cli 'rm -rf .wp-content/uploads'",
		"export:clean:mkdir": "npm run cli 'mkdir -p .wp-content/uploads'",
		"export:clean": "run-s export:clean:remove export:clean:mkdir",
		"export": "npm run export:clean && run-p export:uploads export:db",
		"import:uploads": "npm run cli 'cp -r .wp-content/uploads wp-content'",
		"import:db": "npm run wp 'db import .wp-content/db.sql'",
		"import": "run-s import:*"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
