{
  "name": "ystandard",
  "version": "1.0.0",
  "author": "yosiakatuki",
  "license": "GPLv2",
  "devDependencies": {
	"@babel/cli": "^7.17.6",
	"@babel/core": "^7.17.8",
	"@babel/preset-env": "^7.16.11",
	"@wordpress/browserslist-config": "^4.1.2",
	"@wordpress/eslint-plugin": "^11.1.0",
	"@wordpress/prettier-config": "^1.1.3",
	"autoprefixer": "^10.4.4",
	"babel-loader": "^8.2.4",
	"browserslist": "^4.20.2",
	"css-declaration-sorter": "^6.2.2",
	"css-vars-ponyfill": "^2.4.7",
	"cssnano": "^5.1.6",
	"del": "^6.0.0",
	"eslint": "^8.12.0",
	"eslint-config-prettier": "^8.5.0",
	"eslint-plugin-prettier": "^4.0.0",
	"husky": "^7.0.4",
	"npm-run-all": "^4.1.5",
	"object-fit-images": "^3.2.4",
	"po2json": "^1.0.0-beta-3",
	"postcss": "^8.4.12",
	"postcss-cli": "^9.1.0",
	"prettier": "npm:wp-prettier@latest",
	"rimraf": "^3.0.2",
	"sass": "^1.49.10",
	"simple-icons": "^6.16.0",
	"webpack": "^5.70.0",
	"webpack-cli": "^4.9.2"
  },
  "scripts": {
	"watch:js": "babel src/js --out-dir js --ignore 'src/js/polyfill/polyfill.js','src/js/icons/*' -w -s & webpack -c ./webpack.polyfill.config.js -w",
	"watch:css": "sass src/sass:temp/css --no-source-map â€“w & postcss temp/css/*.css --dir css -w",
	"watch": "run-p watch:*",
	"test:lint:php": "composer phpcs",
	"test:lint:js": "eslint --fix ./src/js/*.js",
	"test:lint": "run-s test:lint:*",
	"test": "run-s test:*",
	"build:js": "babel src/js --out-dir js --ignore 'src/js/polyfill/polyfill.js','src/js/icons/*' && webpack -c ./webpack.polyfill.config.js",
	"build:css": "sass src/sass:css --no-source-map && postcss css/*.css -r",
	"build:icons": "node ./src/js/icons/brand.js",
	"build": "run-s clean build:*",
	"clean:temp": "rimraf temp",
	"clean:upload": "rimraf upload",
	"clean:css": "rimraf css & rimraf src/css",
	"clean:js": "rimraf js",
	"clean:zip": "rimraf ystandard.zip",
	"clean": "run-p clean:*",
	"i18n:pot": "wp i18n make-pot . languages/ystandard.pot --domain=\"ystandard\" --exclude=\"library,tests,vendor,bin\" --skip-js",
	"i18n:blocks": "po2json languages/ja.po languages/ystandard-ja-ys-block-editor-scripts.json -f jed",
	"mkdir:upload": "mkdir -p upload/ystandard",
	"zip:copy": "rsync -a --exclude='.*' --exclude='/node_modules' --exclude='/vendor' --exclude='/bin' --exclude='/upload' --exclude='/composer.*' --exclude='*.config.js' --exclude='*.config.json' --exclude='*.xml.dist' --exclude='/tests' --exclude='/src' --exclude='package*.json' --exclude='ystandard-info*.json' . upload/ystandard",
	"zip:archive": "zip -9 -qmr ystandard.zip upload/ystandard",
	"zip": "run-s clean:upload mkdir:upload zip:copy zip:archive",
	"copy:json:production": "cp ystandard-info.json upload/ystandard-info.json",
	"copy:json:develop": "cp ystandard-info-beta.json upload/ystandard-info.json",
	"copy:theme": "cp ystandard.zip upload/ystandard.zip",
	"copy:production": "run-p copy:json:production copy:theme",
	"copy:develop": "run-p copy:json:develop copy:theme"
  },
  "browserslist": [
	"extends @wordpress/browserslist-config"
  ]
}
