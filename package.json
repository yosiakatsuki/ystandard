{
	"name": "ystandard",
	"version": "1.0.0",
	"author": "yosiakatuki",
	"license": "GPLv3",
	"devDependencies": {
		"@wordpress/browserslist-config": "^5.23.0",
		"@wordpress/env": "^8.6.0",
		"@wordpress/scripts": "^26.17.0",
		"autoprefixer": "^10.4.15",
		"browserslist": "^4.21.10",
		"css-declaration-sorter": "^7.0.3",
		"cssnano": "^6.0.1",
		"del": "^7.0.0",
		"husky": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"po2json": "^1.0.0-beta-3",
		"postcss": "^8.4.31",
		"postcss-cli": "^10.1.0",
		"rimraf": "^5.0.1",
		"sass": "^1.66.1",
		"simple-icons": "^9.11.0",
		"tailwindcss": "^3.3.5"
	},
	"scripts": {
		"wpenv:start:update": "wp-env start --xdebug=debug,develop -- --update",
		"wpenv:start": "wp-env start --xdebug=debug,develop",
		"wpenv:stop": "wp-env stop",
		"wpenv:destroy": "wp-env destroy",
		"watch:scripts": "wp-scripts start --webpack-src-dir=src/scripts --output-path=assets/js --config webpack.config.js",
		"watch:postcss:block-style": "postcss temp/css/block-styles/**/*.css --base temp/css/block-styles --dir assets/css/block-styles --verbose -w",
		"watch:postcss:theme": "postcss temp/**/*.css --base temp/css --dir assets/css --verbose -w",
		"watch:postcss": "run-p watch:postcss:*",
		"watch:css:block-style": "sass src/block-styles:temp/css/block-styles --no-source-map --no-stop-on-error -w",
		"watch:css:theme": "sass src/styles:temp/css --no-source-map --no-stop-on-error -w",
		"watch:css": "run-p watch:css:*",
		"watch": "NODE_ENV=development run-p watch:*",
		"build:scripts": "wp-scripts build --webpack-src-dir=src/scripts --output-path=assets/js --config webpack.config.js",
		"build:css:block-style": "sass src/block-styles:assets/css/block-styles --no-source-map",
		"build:css:theme": "sass src/styles:assets/css --no-source-map ",
		"build:css:postcss:theme": "postcss assets/css/*.css -r && postcss css/**/*.css -r",
		"build:css:postcss:block-style": "postcss assets/css/block-styles/**/*.css -r",
		"build:css:postcss": "run-s build:css:postcss:*",
		"build:css": "run-s build:css:*",
		"build:icons": "node ./src/scripts/icons/create-bland-iconlist.ts",
		"build": "run-s clean build:*",
		"lint:php": "composer phpcs",
		"lint:js": "eslint --fix ./src/js/*.js",
		"lint": "run-s lint:*",
		"test:php": "wp-env start && wp-env run tests-cli --env-cwd='wp-content/themes/ystandard' vendor/bin/phpunit -c phpunit.xml.dist",
		"test": "run-s test:*",
		"clean:upload": "rimraf upload & rimraf /ystandard",
		"clean:css": "rimraf css",
		"clean:js": "rimraf js",
		"clean:zip": "rimraf ystandard.zip",
		"clean": "run-p clean:*",
		"i18n:pot": "wp i18n make-pot . languages/ystandard.pot --domain=\"ystandard\" --exclude=\"library,tests,vendor,bin\" --skip-js",
		"i18n:blocks": "po2json languages/ja.po languages/ystandard-ja-ys-block-editor-scripts.json -f jed",
		"zip:copy": "rsync -a --exclude='.*' --exclude='/node_modules' --exclude='/vendor' --exclude='/bin' --exclude='/upload' --exclude='/temp' --exclude='/composer.*' --exclude='*.config.js' --exclude='*.config.json' --exclude='tsconfig.json' --exclude='*.xml.dist' --exclude='/tests' --exclude='/src' --exclude='package*.json' --exclude='ystandard-info*.json' . ystandard",
		"zip:archive": "zip -9 -qmr ystandard.zip ystandard",
		"zip": "run-s build clean:upload clean:zip zip:copy zip:archive",
		"mkdir:upload": "mkdir upload",
		"copy:json:production": "cp ystandard-info.json upload/ystandard-info.json",
		"copy:json:develop": "cp ystandard-info-beta.json upload/ystandard-info.json",
		"copy:theme": "cp ystandard.zip upload/ystandard.zip",
		"copy:production": "run-s mkdir:upload copy:json:production copy:theme",
		"copy:develop": "run-s mkdir:upload copy:json:develop copy:theme"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
