{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
		"lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "importsNotUsedAsValues": "error",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@aktk/blocks/*": [
                "src/blocks/*"
            ],
            "@ystd/*": [
                "src/scripts/*"
            ],
        },
		"typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
}
